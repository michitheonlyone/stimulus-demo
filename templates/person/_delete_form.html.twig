<form method="post" class="d-inline" action="{{ path('app_person_delete', {'id': person.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ person.id) }}">
    <button class="btn-link btn m-0 p-0"><i class="bi bi-trash"></i></button>
</form>
